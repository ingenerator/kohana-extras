{
  "name": "ingenerator/kohana-extras",
  "type": "library",
  "description": "Helper and wrapper classes for Kohana",
  "homepage": "http://github.com/ingenerator/kohana-extras",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Andrew Coulton",
      "email": "andrew@ingenerator.com",
      "homepage": "https://ingenerator.com"
    },
    {
      "name": "Craig Gosman",
      "email": "craig@ingenerator.com",
      "homepage": "https://ingenerator.com"
    }
  ],
  "require": {
    "php": "^7.4",
    "ingenerator/kohana-core": "^4.7",
    "ingenerator/kohana-dependencies": "^1.2",
    "ingenerator/php-utils": "^1.5",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "johnkary/phpunit-speedtrap": "^3.0",
    "kohana/koharness": "*@dev",
    "phpunit/phpunit": "^9.0",
    "symfony/process": "^3.4",
    "mikey179/vfsstream": "^1.6.8",
    "phpspec/prophecy-phpunit": "^2.0"
  },
  "suggest": {
    "maximebf/debugbar": "^1.14 to use the debug bar in development environments",
    "swiftmailer/swiftmailer": "^6.2.3 to use the SwiftMailer dependency factory"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://php-packages.ingenerator.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Ingenerator\\KohanaExtras\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "beta",
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}": [
        "type:kohana-module"
      ]
    }
  }
}
