{
  "name": "ingenerator/kohana-extras",
  "type": "library",
  "description": "Helper and wrapper classes for Kohana",
  "homepage": "http://github.com/ingenerator/kohana-extras",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Andrew Coulton",
      "email": "andrew@ingenerator.com",
      "homepage": "http://ingenerator.com"
    }
  ],
  "require": {
    "php": "^5.5||^7.0",
    "ingenerator/kohana-core": "^4.0",
    "ingenerator/kohana-dependencies": "^0.9.1",
    "ingenerator/php-utils": "^0.1.5"
  },
  "require-dev": {
    "johnkary/phpunit-speedtrap": "^1.0||^3.0",
    "kohana/koharness": "*@dev",
    "phpunit/phpunit": "^4.8||^7.0",
    "symfony/process": "^3.4"
  },
  "suggest": {
    "maximebf/debugbar": "^1.14 to use the debug bar in development environments"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://php-packages.ingenerator.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Ingenerator\\KohanaExtras\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}": [
        "type:kohana-module"
      ]
    }
  }
}
